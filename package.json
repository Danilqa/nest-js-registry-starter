{
    "name": "nest-js-starter",
    "version": "0.0.1",
    "description": "",
    "main": "index.ts",
    "license": "MIT",
    "scripts": {
        "copy:assets": "node dev/scripts/copy-assets.js",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:db": "docker-compose up -d",
        "start:debug": "nest start --debug --watch",
        "lint:code": "eslint --ext .js,.ts",
        "lint": "yarn lint:code .",
        "test": "jest --no-cache --coverage",
        "hooks:pre-push": "yarn lint && yarn test"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn hooks:pre-push",
            "pre-commit": "lint-staged",
            "commit-msg": "commit-linter --message=COMMIT_MESSAGE"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint",
            "git add"
        ]
    },
    "dependencies": {
        "@nestjs/common": "8.1.2",
        "@nestjs/core": "8.1.2",
        "@nestjs/microservices": "8.1.2",
        "@nestjs/mongoose": "8.0.1",
        "@nestjs/platform-express": "8.1.2",
        "@nestjs/swagger": "5.1.4",
        "bcrypt": "5.0.1",
        "jsonwebtoken": "8.5.1",
        "kafkajs": "1.15.0",
        "mongoose": "6.0.12",
        "reflect-metadata": "0.1.13",
        "swagger-ui-express": "4.1.6",
        "uuidv4": "6.2.12"
    },
    "devDependencies": {
        "@eigenspace/codestyle": "latest",
        "@eigenspace/commit-linter": "latest",
        "@eigenspace/common-types": "0.0.23",
        "@nestjs/testing": "8.1.2",
        "@types/bcrypt": "5.0.0",
        "@types/jest": "27.0.2",
        "@types/jsonwebtoken": "8.5.5",
        "@types/node-fetch": "2.5.7",
        "@types/supertest": "2.0.10",
        "cross-env": "7.0.2",
        "eslint": "7.9.0",
        "eslint-plugin-eigenspace-script": "latest",
        "husky": "2.3.0",
        "jest": "27.3.1",
        "lint-staged": "8.1.7",
        "mongodb-memory-server": "8.0.0",
        "nodemon": "2.0.4",
        "supertest": "6.1.3",
        "ts-jest": "27.0.7",
        "ts-loader": "9.2.6",
        "ts-node": "10.4.0",
        "typescript": "4.4.4"
    }
}
