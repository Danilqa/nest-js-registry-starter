{
    "extends": "@eigenspace/codestyle/configs/typescript/base.tsconfig",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020"
        ]
    },
    "include": [
        "src",
        "libs"
    ]
}
